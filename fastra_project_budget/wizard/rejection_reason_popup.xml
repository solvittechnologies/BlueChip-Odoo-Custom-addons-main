<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
    <record id="update_rejection_reason_note_form" model="ir.ui.view">
        <field name="name">update.rejection.reason.note.form</field>
        <field name="model">rejection.reason.popup.wizard</field>
        <field name="arch" type="xml">
        	<form>
                <p>Pleace Enter The reason For Rejection</p>
                <field name = "rejection_note"/>
                <footer>
                        <button string="REJECT" name="rejection_reason_note" type="object" class="oe_highlight"/>
                        <button string="NO" class="btn btn-secondary " special="cancel"/>
                    </footer>
               </form>
        </field>
    </record>
    </data>
</odoo>
