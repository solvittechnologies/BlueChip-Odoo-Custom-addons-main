<odoo>
    <record id="view_fastra_hr_salary_payroll_cancel" model="ir.ui.view">
        <field name="name">Reason for the cancellation</field>
        <field name="model">fastra.hr.cancel</field>
        <field name="arch" type="xml">
         <form string="Reason for the cancellation" version="7.0">
            <p class="oe_grey">
                Reason for the cancellation of the
                Salary Payroll.
            </p>
            <group>
                <field name="reason"/>
            </group>
            <footer>
                <button name="confirm_cancel"
                    string="Confirm" type="object"
                    class="oe_highlight"/>
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

